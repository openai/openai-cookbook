# imports
import pandas as pd
import tiktoken
import openai
openai.api_key = "API-KEY"

from openai.embeddings_utils import get_embedding

# embedding model parameters
embedding_model = "text-embedding-ada-002"
embedding_encoding = "cl100k_base"  # this the encoding for text-embedding-ada-002
max_tokens = 8000  # the maximum for text-embedding-ada-002 is 8191

# load & inspect dataset
input_datapath = "sample_data/googleplaystore.csv"  # link to the dataset
df = pd.read_csv(input_datapath, index_col=0)
df = df[["App", "Rating", "Reviews", "Size", "Installs", "Genres"]]
df = df.dropna()
df["combined"] = (
    "Category: " + df.Genres.str.strip() + "; Description: " + df.App.str.strip()
)

df.head(2)

# subsample to 1k most recent reviews and remove samples that are too long
top_n = 1000
df = df.sort_values("Reviews").tail(top_n * 2)  # first cut to first 2k entries, assuming less than half will be filtered out
df.drop("Reviews", axis=1, inplace=True)

encoding = tiktoken.get_encoding(embedding_encoding)

# omit reviews that are too long to embed
df["n_tokens"] = df.combined.apply(lambda x: len(encoding.encode(x)))
df = df[df.n_tokens <= max_tokens].tail(top_n)
len(df)

# This may take a few minutes
df["embedding"] = df.combined.apply(lambda x: get_embedding(x, engine=embedding_model))
df.to_csv("sample_data/googleplaystore_app_reviews_with_embeddings_1k.csv")

import numpy as np

datafile_path = "sample_data/googleplaystore_app_reviews_with_embeddings_1k.csv"

df = pd.read_csv(datafile_path)
df["embedding"] = df.embedding.apply(eval).apply(np.array)

from openai.embeddings_utils import get_embedding, cosine_similarity

# search through the app description for a specific app
def search_apps(df, app_description, n=3, pprint=True):
    app_embedding = get_embedding(
        app_description,
        engine="text-embedding-ada-002"
    )
    df["similarity"] = df.embedding.apply(lambda x: cosine_similarity(x, app_embedding))

    results = (
        df.sort_values("similarity", ascending=False)
        .head(n)
        .combined.str.replace("Category: ", "")
        .str.replace("; Description:", ": ")
    )
    if pprint:
        for r in results:
            print(r[:200])
            print()
    return results


results = search_apps(df, "code", n=5)
